<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="window" alignment="CENTER" minHeight="700.0" minWidth="300.0" spacing="20.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eva.controller.Login">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="166.0" prefWidth="360.0" text="EVA" textAlignment="JUSTIFY">
            <font>
                <Font name="Bauhaus 93" size="96.0" />
            </font>
        </Label>
        <Label fx:id="error" alignment="CENTER" contentDisplay="CENTER" opacity="0.0" prefHeight="70.0" prefWidth="370.0" text="Error goes here!" textAlignment="CENTER" textFill="RED" wrapText="true">
            <font>
                <Font size="19.0" />
            </font>
        </Label>
        <TextField editable="false" layoutX="107.0" layoutY="14.0" opacity="0.0">
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor></TextField>
      <Separator prefWidth="200.0" />
        <TextField fx:id="user_id" alignment="CENTER" layoutY="140.0" prefHeight="36.0" prefWidth="360.0" promptText="User ID">
            <font>
                <Font size="20.0" />
            </font></TextField>
        <PasswordField fx:id="password" alignment="CENTER" layoutX="1.0" layoutY="184.0" prefHeight="36.0" prefWidth="360.0" promptText="Password">
            <font>
                <Font size="20.0" />
            </font></PasswordField>
      <Separator prefWidth="200.0" />
        <Button contentDisplay="CENTER" layoutY="307.0" mnemonicParsing="false" onAction="#login" prefHeight="60.0" prefWidth="360.0" text="login" textAlignment="CENTER">
            <font>
                <Font name="Bauhaus 93" size="24.0" />
            </font>
        </Button>
      <Hyperlink onAction="#switchToRegister" text="Don't have an account? Click to Register">
         <font>
            <Font size="19.0" />
         </font>
      </Hyperlink>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
